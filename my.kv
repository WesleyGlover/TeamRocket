<MyGridLayout>
    name: name
    cat_breed: cat_breed

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False
            Label:
                text: "Favorite Cat Breed"
            TextInput:
                id: cat_breed
                multiline: False

        Button:
            text: "Submit"
            on_press: root.press()
            background_normal: ''
            background_color: utils.get_color_from_hex('#c989e0')
