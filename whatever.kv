    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        Label:
            id: image_label
            text: "Crying Until I'm Laughing Cow Emoji"
            font_size: 32
            pos_hint: {'center_x': 0.5}
            size_hint: (1, .25)
            background_color: (0, 0, 1, .5)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: (0, 0, 0, 1)
            bold: True
            outline_color: (1, 1, 1)
            outline_width: 1 #not too big or crashes app?

        Image:
            id: image_on_screen
            source: 'crying_until_im_laughing_cow_emoji.png'

