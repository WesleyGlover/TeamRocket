<CreateMeetingScreen>
    name: "create_meeting"
    app: app
    GridLayout:
        cols: 1

        GridLayout:
            cols: 3
            size_hint: (1, .2)

            Button:
                text: "<<"
                on_press: app.root.current = 'home'
                size_hint: (.2, 1)
            Label:
                text: "Create a Meeting"
                font_size: 30
                color: utils.get_color_from_hex(soft_black)
            Label:
                size_hint: (.2, 1)
        # MapView: #this map will show the possible locations based on the criteria layed out
        #     id: create_meeting_map
        #     lat: 33.218850
        #     lon: -97.146090
        #     zoom: 10
        BoxLayout:
            GridLayout:
                cols: 2
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex(dark_peach)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    text: "Starting Address"
                    size_hint: (1, .1)
                TextInput:
                    id: starting_address
                Label:
                    text: "Send Invite To?"
                    size_hint: (1, .1)
                TextInput:
                    id: invited_user
            Label:
                text: "Meeting Date and Time"
                size_hint: (1, .1)
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex(dark_peach)
                    Rectangle:
                        size: self.size
                        pos: self.pos
            GridLayout:
                cols: 2
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex(dark_peach)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Button:
                    text: "Date Picker"
                    on_press: root.show_date_picker();
                Label:
                    id: create_date
                    text: "mm/dd/yy"
                Button:
                    text: "Time Picker"
                    on_press: root.show_time_picker();
                Label:
                    id: create_time
                    text: "hh:mm"
            Label:
                text: "Location Filters"
                size_hint: (1, .1)
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex(dark_peach)
                    Rectangle:
                        size: self.size
                        pos: self.pos
            GridLayout:
                cols: 2
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex(dark_peach)
                    Rectangle:
                        size: self.size
                        pos: self.pos

                Label:
                    text: "Cofee Shops"
                CheckBox:
                    id: coffee_check
                Label:
                    text: "Libraries"
                CheckBox:
                    id: library_check
                Label:
                    text: "Banks"
                CheckBox:
                    id: banks_check
                Label:
                    text: "Police Stations"
                CheckBox:
                    id: police_check
                Label:
                    text: "Fire Departments"
                CheckBox:
                    id: fire_check
                Label:
                    text: "Gas Stations"
                CheckBox:
                    id: gas_check


            Button:
                text: "Send Request"
                size_hint: (.6, .3)
                pos_hint: {"center_x": .5}
                on_press: root.send_request_button_onclick(); app.root.current = "home";

<SettingsScreen>
    name: "settings"

    GridLayout:
        cols: 1

        GridLayout:
            size_hint: (1, .2)

            cols: 3
            Button:
                text: "<<"
                size_hint: (.2, 1)

                on_press: app.root.current = "home"
            Label:
                text: "Settings"
                font_size: 40
                color: utils.get_color_from_hex(soft_black)
            Label:
                size_hint: (.2, 1)
        BoxLayout:
<CalenderScreen>
    name: "calender"

    GridLayout:
        cols: 1

        GridLayout:
            cols: 3
            size_hint: (1, .2)

            Label:
                size_hint: (.2, 1)
            Label:
                text: "Calender"
                font_size: 40
                color: utils.get_color_from_hex(soft_black)
            Button:
                text: "R"
                size_hint: (.2, 1)

                on_press: root.request_popup.open() #open request pop-up
        CalendarWidget: #no options for this because it's weird
        Card:
            id: meeting_on_day_content
            padding: 10
            Label:
                text: "Meetings On Selected Day"
                size_hint: (1, .1)
            CalMeetingLayout: #going to make a CalMeetingLayout I think
                id: meeting_requests
                app: app
                size_hint: (1, .9)

        GridLayout:
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex(thick_ice)
                Rectangle:
                    size: self.size
                    pos: self.pos

            cols: 3
            size_hint: (1, .2)

            Button:
                text: "H"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (.1, .1)

                on_press: app.root.current = "home"
            Button:
                text: "C"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (.1, .1)

                disabled: True
            Button:
                text: "E"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (.1, .1)

                on_press: app.root.current = "explore"

