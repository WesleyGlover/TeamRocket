#colors for app elements
#text font colors
#:set soft_black '#333333' #for sky_blue, aqua_blue, mint_green, peach_pink, egg_back
#:set harsh_black: '#0F0F0F' #for apple_red
#:set not_white '#EBEBEB' #for forest_green, night_blue, apple_red, thick_ice, black_back
#:set off_white '#FCFCFC' #for dark_peach

#colors for visual elements for app
#:set apple_red '#F5345C' #can be used in both themes

#:set mint_green '#B2EB9C' #not for light mode
#:set peach_pink '#E0AF9D' #not for light mode
#:set aqua_blue '#4ED2DB' #not for light mode
#:set sky_blue '#51A6F5' #not for light mode

#:set dark_peach '#D1797B' #not for dark mode (but can be used)
#:set night_blue '#366EA3' #not for dark mode
#:set forest_green '#1D7850' #not for dark mode
#:set thick_ice '#0C6399' #not for dark mode

#app beckground colors
#:set black_back '#0D0D0D' #for dark mode background
#:set egg_back '#F2F2F2' #for light mode background

Manager:
    TitleScreen:
    LoginScreen:
    RegisterScreen:
    HomeScreen:
    # MeetingInfoScreen:
    CreateMeetingScreen:
    SettingsScreen:
    CalenderScreen:
    # ConfirmRequestScreen:
    ExploreScreen:

<BoxLayout>
    orientation: "vertical"
    size: root.width, root.height

    padding: 30
    spacing: 10
<Card>
    orientation: "vertical"
    size: root.width, root.height

    border_radius: 30
    style: "elevated"
    elevation: 20
    padding: 30
    spacing: 10
<MDFlatButton>
    text_color: utils.get_color_from_hex(night_blue)
<MDRaisedButton>
    theme_text_color: "Custom"
    text_color: utils.get_color_from_hex(not_white)
    md_bg_color: utils.get_color_from_hex(night_blue)
<MDTextField>
    helper_text_mode: "on_error"
    helper_text: "Enter Text"
    color_mode: 'custom'
    line_color_focus: utils.get_color_from_hex(dark_peach)
<ErrorMessage>
    md_bg_color: utils.get_color_from_hex(off_white)
    elevation: 0
    padding: (0, 20)


#defaults for the stupid calender
<MonthYearLabel>
    color: utils.get_color_from_hex(soft_black)
    font_size: 30
<DayAbbrLabel>
    color: utils.get_color_from_hex(soft_black)
<DayAbbrWeekendLabel>
    color: utils.get_color_from_hex(dark_peach)

<AppInfoPopup@Popup>
    auto_dismiss: True
    title: "How to use the app:"
    size_hint: (.8, .8)

    Label:
        text: "This is how the app works"
<RequestsPopup>
    auto_dismiss: True
    title: "Requests:"
    size_hint: (.8, .4)
    pos_hint: {'center_x': .6, 'center_y': .8}

    RequestLayout:
        id: requested_meetings
        app: app

<TitleScreen>
    name: "title"

    BoxLayout:
        Image: #will become an image once I make the logo
            pos_hint: {'center_x': .5, 'center_y': .2}
            size_hint: (.4, .4)
            source: 'image/mitm_logo.png'
        Label:
            text: "Meet in the Middle"
            font_size: 50
            color: utils.get_color_from_hex(soft_black)
            pos_hint: {'center_x': .5}
            size_hint: (1, .8)
        #animation goes here, but image for now
        # Image:
        #     id: animation
        #     source: 'images/test_image1.png
        Label:
            id: animate_me
            size: 0, 20
        MDFlatButton: #temp while i figure out touch events should be a Label
            id: accredation
            text: "THIS IS A BUTTON"
            font_size: 16
            pos_hint: {'center_x': 0.5}
            on_press: app.root.current = "login"

    #on_touch_down: app.root.current = "login"

<LoginScreen>
    name: "login"
    app: app
    BoxLayout:
        Image: #will become an image once I make the logo
            pos_hint: {'center_x': .5, 'center_y': .2}
            size_hint: (.2, .2)
            source: 'image/mitm_logo.png'
        Label:
            id: app_title
            text: "Meet in the Middle"
            color: utils.get_color_from_hex(soft_black)
            font_size: 32
            pos_hint: {'center_x': .5}
            size_hint: (1, .5)
        #animation goes here, but image for now
        Card:
            ErrorMessage:
                id: login_error_message
                size_hint: (1, .1)
                font_size: 20
                text: ""
                halign: "center"
                valign: "center"
            MDTextField:
                id: username_input
                hint_text: "Username"
                required: True

                font_size: 20
                pos_hint: {'center_x': .5}
                size_hint: (.7, .2)
                multiline: False
                write_tab: False
            MDTextField:
                id: password_input
                hint_text: "Password"
                required: True
                password: True
                password_mask: '•'

                font_size: 20
                pos_hint: {'center_x': .5}
                size_hint: (.7, .2)
                multiline: False
                write_tab: False
            MDFlatButton:
                text: "Forgot Your Password?"
                color: utils.get_color_from_hex(soft_black)
                font_size: 12
                pos_hint: {'center_x': .5, 'center_y': .2}
                #on_press: #nothing for now
            MDRaisedButton:
                text: "Login"
                font_size: 20
                pos_hint: {'center_x': .5}
                on_press: root.login_button_onclick(); #app.root.current = "home" #should do validation though
        MDFlatButton: #temp while i figure out touch events
            text: "Register"
            font_size: 16
            pos_hint: {'center_x': .5}
            on_press: app.root.current = "register"

<RegisterScreen>
    name: "register"
    app: app
    BoxLayout:
        Label: #will become an image once I make the logo
            text: 'M'
            font_size: 32
            pos_hint: {'center_x': .5}
            size_hint: (.1, .1)
            #background_color: utils.get_color_from_hex(black_back)
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex(black_back)
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: utils.get_color_from_hex(not_white)
            bold: True
        Label:
            id: app_title
            text: "Meet in the Middle"
            color: utils.get_color_from_hex(soft_black)
            font_size: 32
            pos_hint: {'center_x': .5}
            size_hint: (1, .2)
        #animation goes here, but image for now
        Card:
            ErrorMessage:
                id: register_error_message
                text: ""
                color: utils.get_color_from_hex(off_white)
                size_hint: (1, .1)
                font_size: 20
                halign: "center"
                valign: "center"
            MDTextField:
                id: register_name_input
                hint_text: "Name"
                required: True

                font_size: 20
                pos_hint: {'center_x': .5}
                size_hint: (.7, .2)
                multiline: False
                write_tab: False
                text_size: root.width * .75, root.height * .75
            MDTextField:
                id: register_email_input
                hint_text: "Email"
                required: True

                font_size: 20
                pos_hint: {'center_x': .5}
                size_hint: (.7, .2)
                multiline: False
                write_tab: False
                text_size: root.width * .75, root.height * .75
            MDTextField:
                id: register_username_input
                hint_text: "Username"
                required: True

                font_size: 20
                pos_hint: {'center_x': .5}
                size_hint: (.7, .2)
                multiline: False
                write_tab: False
                text_size: root.width * .75, root.height * .75
            MDTextField:
                id: register_password_input
                hint_text: "Password"
                required: True

                font_size: 20
                pos_hint: {'center_x': .5}
                size_hint: (.7, .2)
                multiline: False
                password: True
                password_mask: '•'
                write_tab: False
                text_size: root.width * .75, root.height * .75
            MDTextField:
                id: register_repassword_input
                hint_text: "Re-enter Password"
                required: True

                font_size: 20
                pos_hint: {'center_x': .5}
                size_hint: (.7, .2)
                multiline: False
                password: True
                password_mask: '•'
                write_tab: False
                text_size: root.width * .75, root.height * .75
            MDRaisedButton:
                text: "Register"
                font_size: 20
                pos_hint: {'center_x': .5}

                #there should be validation and stuff, but for now we just go to the home screen
                on_press: root.register_button_onclick();

<HomeScreen>
    name: "home"

    GridLayout:
        cols: 1

        GridLayout:
            cols: 3
            size_hint: (1, .2)

            Button:
                text: "S"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (.2, .2)

                on_press: app.root.current = "settings"
            Label:
                text: "Home"
                color: utils.get_color_from_hex(soft_black)
                font_size: 50
            Button:
                text: "i"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (.2, .2)

                on_press: Factory.AppInfoPopup().open() #pop up
        MapView: #this map will show the user their current location
            id: home_map
            lat: root.get_user_lat()
            lon: root.get_user_lon()
            zoom: 17
        BoxLayout:
            Card:
                id: upcoming_meeting_content
                padding: 10
                Label:
                    text: "Upcoming Meetings"
                    size_hint: (1, .1)
                MeetingLayout:
                    id: upcoming_meetings
                    app: app
                    size_hint: (1, .9)
            Button:
                text: "Create A Meeting"
                font_size: 14
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (.5, .2)

                #this button should call a function not just go to the create meeting page
                on_press: app.root.current = 'create_meeting'
        GridLayout:
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex(thick_ice)
                Rectangle:
                    size: self.size
                    pos: self.pos

            cols: 3
            size_hint: (1, .2)

            Button:
                text: "H"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (.1, .1)

                disabled: True
            Button:
                text: "C"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (.1, .1)

                on_press: app.root.current = "calender"
            Button:
                text: "E"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (.1, .1)

                on_press: app.root.current = "explore"

